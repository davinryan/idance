// Refer to http://json.schemastore.org/tsconfig for more detail
{
  "compilerOptions": {

    // Type declaration files to be included in compilation. Requires TypeScript version 2.0 or later.
    "types": ["node"],

    // Specify module code generation: 'none', 'CommonJS', 'Amd', 'System', 'UMD', or 'es2015'.
    "module": "commonjs",

    // specify ECMAScript target version. Permitted values are 'es3', 'es5', 'es2015', 'es2016', 'es2017' or 'esnext'.
    "target": "es6",

    // Generates corresponding '.map' file.
    "sourceMap": true,

    // Emit design-type metadata for decorated declarations in source.
    "emitDecoratorMetadata": true,

    // Enables experimental support for ES7 decorators.
    "experimentalDecorators": true,

    // Warn on expressions and declarations with an implied 'any' type.
    "noImplicitAny": false,

    // Enable JSX
    "jsx": "react"
  },
  // Specifies a list of glob patterns that match files to be included in compilation. If no 'files' or 'include'
  // property is present in a tsconfig.json, the compiler defaults to including all files in the containing directory
  // and subdirectories except those specified by 'exclude'. Requires TypeScript version 2.0 or later.
  "include": [
    "src/**/*"
  ],
  // Specifies a list of files to be excluded from compilation. The 'exclude' property only affects the files included
  // via the 'include' property and not the 'files' property. Glob patterns require TypeScript
  "exclude": [
    "src/**/*.test.js",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}